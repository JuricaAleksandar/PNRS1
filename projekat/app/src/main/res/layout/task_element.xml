<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellowBgd">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/redButton"
        android:layout_weight="1"
        android:id="@+id/lvPriority">
    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="match_parent">

        <CheckBox
            android:layout_width="wrap_content"
            android:id="@+id/lvDone"
            android:layout_height="match_parent"
            android:layout_below="@+id/lvTaskName"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/lvTaskDate"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/lvTaskName"
            android:layout_marginStart="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/lvTaskName"
            android:textSize="15sp"
            android:layout_below="@+id/lvTaskDate"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="0dp"/>

    </RelativeLayout>

</LinearLayout>